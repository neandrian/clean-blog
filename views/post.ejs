<%- include('partials/_header.ejs') -%>

  <body>
    <!-- Navigation -->
    <%- include('partials/_navigation.ejs') -%>

    <!-- Page Header -->
    <header class="masthead" style="background-image: url('/img/post-bg.jpg')">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="post-heading">
              <h1><%= post.title %></h1>
              <h2 class="subheading">
                <%= post.title %>
              </h2>
              <span class="meta"
                >Posted by
                <a href="#">admin</a>
                on <%= post.dateCreated.toString().substring(0,15) %></span
              >
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Post Content -->
    <article>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <p>
              <%= post.detail %>
            </p>
          </div>
        </div>
        <div class="text-center">
          <a href="/posts/edit/<%= post._id %>"  class="btn btn-primary" >
            Edit Post
          </a>
          <a href="/posts/<%= post._id %>?_method=DELETE" class="btn btn-danger" onclick="return confirm('ARE YOU SURE?')">
            Delete Post
          </a>
        </div>
      </div>
    </article>

    <hr />

    <!-- Footer -->
    <%- include('partials/_footer.ejs') -%>
    
    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Custom scripts for this template -->
    <script src="js/clean-blog.min.js"></script>
  </body>
</html>
